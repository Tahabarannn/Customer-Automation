                <div class="swiper-pagination"></div>
            </div>
        </section>

        <!--==================== SEARCH ====================-->
        <section class="search section" id="search">
            <div class="search__bg">
                <div class="search__container container grid">
                    <div class="search__data">
                        @using (Ajax.BeginForm("FormSearch", "Home", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Update" }))
                        {
                            <div class="search__content">
                                <input type="search" placeholder="Formda kullandığınız mail adresini girin." name="p" class="search__input" required />
                            </div>
                            <div id="Update">
                                <p class="search__description">Lütfen mail adresinizi giriniz.</p>
                            </div>
                            <input type="submit" value="Ara" class="button button--flex button--white" />

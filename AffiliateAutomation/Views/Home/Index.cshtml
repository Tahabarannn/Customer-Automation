        <!--==================== CONTACT ME ====================-->
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {

            <section class="contact section" id="form">
                <h2 class="section__title">İletişim</h2>
                <span class="section__subtitle">Reklam Formu</span>

                <div class="contact__container container grid">
                    <form action="" class="contact__form grid">
                        <div class="contact__inputs grid">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x => x.IsActive)
                            @Html.HiddenFor(x => x.UserID)
                            @Html.HiddenFor(x => x.FormDate)

                            <div class="contact__content">
                                @Html.Label("*Mail", new { @class = "contact__label" })
                                @Html.TextBoxFor(x => x.AffMail, new { @class = "contact__input", placeholder = "Mail adresinizi giriniz" })
                                @Html.ValidationMessageFor(x => x.AffMail)
                            </div>
                            <div class="contact__content">
                                @Html.Label("*İletişim", new { @class = "contact__label" })
                                @Html.TextBoxFor(x => x.Contact, new { @class = "contact__input", placeholder = "Skype/Telegram Adresi" })
                                @Html.ValidationMessageFor(x => x.Contact)
                            </div>
                        </div>
                        <div class="contact__content">
                            @Html.Label("*Fiyat", new { @class = "contact__label" })
                            @Html.TextBoxFor(x => x.Price, new { @class = "contact__input", placeholder = "Talep Ettiğiniz Fiyat Aralığı" })
                            @Html.ValidationMessageFor(x => x.Price)
                        </div>

                        <div class="contact__content">
                            <label class="contact__label">*Reklam almak istediğiniz platform</label>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Youtube" />
                                <label for="chkbx"><i class="uil uil-youtube"></i>Youtube</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Twitch" />
                                <label for="chkbx"><i class="uil uil-robot"></i>Twitch</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Web" />
                                <label for="chkbx"><i class="uil uil-window"></i>Web</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Diğer" />
                                <label for="chkbx"><i class="uil uil-comment-alt-dots"></i>Diğer</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Twitter" />
                                <label for="chkbx"><i class="uil uil-twitter"></i>Twitter</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Facebook" />
                                <label for="chkbx"><i class="uil uil-facebook"></i>Facebook</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Telegram" />
                                <label for="chkbx"><i class="uil uil-telegram"></i>Telegram</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Instagram" />
                                <label for="chkbx"><i class="uil uil-instagram"></i>Instagram</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="Discord" />
                                <label for="chkbx"><i class="uil uil-discord"></i>Discord</label>
                            </div>
                            <div class="tile">
                                <input type="checkbox" class="chkbx" value="TikTok" />
                                <label for="chkbx"><i class="fa-brands fa-tiktok"></i>TikTok</label>
                            </div>
                            <input type="text" id="TxtSelected" name="SocialMedia" style="display:none" />
                        </div>


                        <div class="contact__content-link">
                            <label class="contact__label">*Hesap Linkleriniz</label>
                            <div class="tile" id="twitter">
                                <i class="fa-solid fa-square-plus" onclick="add_more_twitter()"></i>
                                <input type="text" class="social" id="social" name="SocialMedia" value="https://twitter.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="facebook">
                                <i class="fa-solid fa-square-plus" onclick="add_more_facebook()"></i>
                                <input type="text" class="social" id="social" name="SocialMedia" value="https://www.facebook.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="telegram">
                                <i class="fa-solid fa-square-plus" onclick="add_more_telegram()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://t.me/" autocomplete="off" />
                            </div>
                            <div class="tile" id="instagram">
                                <i class="fa-solid fa-square-plus" onclick="add_more_instagram()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://www.instagram.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="youtube">
                                <i class="fa-solid fa-square-plus" onclick="add_more_youtube()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://www.youtube.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="twitch">
                                <i class="fa-solid fa-square-plus" onclick="add_more_twitch()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://www.twitch.tv/" autocomplete="off" />
                            </div>
                            <div class="tile" id="discord">
                                <i class="fa-solid fa-square-plus" onclick="add_more_discord()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://discord.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="tiktok">
                                <i class="fa-solid fa-square-plus" onclick="add_more_tiktok()"></i>
                                <input type="text" class="social" name="SocialMedia" value="https://www.tiktok.com/" autocomplete="off" />
                            </div>
                            <div class="tile" id="web">
                                <i class="fa-solid fa-square-plus" onclick="add_more_web()"></i>
                                <input type="text" class="social" name="SocialMedia" placeholder="Web sitesi (http(s)://..)" autocomplete="off" />
                            </div>
                            <input type="text" id="TxtSelectedLink" />
                        </div>

                        <div class="contact__content-textarea">
                            <label for="" class="contact__label">*Çalışma Stilleri</label>
                            <textarea name="WorkType" id="" cols="0" rows="7" class="contact__input" placeholder="Markaları ne tarz reklamlar ile tanıtıyorsunuz?" required></textarea>
                        </div>
                        <div class="contact__content-textarea">
                            <label for="" class="contact__label">Not</label>
                            <textarea name="Explanation" id="" cols="0" rows="7" class="contact__input" placeholder="Bize iletmek istediğiniz ekstra bir şey var mı?"></textarea>
                        </div>

                        <div class="g-recaptcha" data-sitekey="6LfVG-UgAAAAAOmBHWJiqbcfPFQ_XHBQV6NYUl-w"></div>

                        <div>
                            <button class="button button--flex">
                                Gönder
                                <i class="uil uil-message button__icon"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        }

        <!--==================== TEAM ====================-->
        <section class="portfolio section" id="team">
            <h2 class="section__title">Ekibimiz</h2>

            <div class="portfolio__container container swiper-container">
                <div class="swiper-wrapper">
                    <!--==================== Team 1 ====================-->
                    <div class="portfolio__content grid swiper-slide">
